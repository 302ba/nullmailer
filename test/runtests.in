#!/bin/sh
SRCDIR="@SRCDIR@"

cd "$(dirname "$0")" || exit 1

sed -e "s,[@]SRCDIR[@],$SRCDIR,g;" < functions.in > functions

failed=0
for test in $*
do
	echo Running test $test...
	if env - bash $test
	then
		echo 'Done.'
	else
		echo '******************************Failed!******************************'
		failed=1
	fi
done 2>&1
exit $failed
