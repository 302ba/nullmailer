. functions
export HELOHOST=f.q.d.n

rm -f testmail
cat >testmail <<EOF
bruce@untroubled.org
bruce@untroubled.org

From: <bruce@untroubled.org>
To: <bruce@untroubled.org>
Subject: Nullmailer automated test message

Just testing, please ignore
EOF

for p in smtp qmqp
do
	echo "Testing host not found error with $p."
	error 2 protocol $p --host=this.host.can.not.exist </dev/null 3<testmail

	echo "Testing connection refused error with $p."
	error 7 protocol $p -p 24680 --host=localhost </dev/null 3<testmail
	
	echo "Testing usage error with $p (zero args)."
	error 1 protocol $p </dev/null 3<testmail
	
	echo "Testing usage error with $p (two args)."
	error 1 protocol $p --host=localhost foobar </dev/null 3<testmail
	
	echo "Testing usage error with $p (unknown option)."
	error 1 protocol $p -x --host=localhost </dev/null 3<testmail
	
	echo "Testing usage error with $p (invalid integer)."
	error 1 protocol $p -p foo --host=localhost </dev/null 3<testmail

	start server tcpserver 0 24680 date
	sleep 1
	echo "Testing protocol failure with $p."
	error 11 protocol $p -p 24680 --host=localhost </dev/null 3<testmail
	stop server
done

rm -f testmail
